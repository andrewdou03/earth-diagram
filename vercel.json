{
  "headers": [
    {
      "source": "/embed(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "frame-ancestors 'self' http://localhost:3000 https://your-portfolio-domain.com https://www.your-portfolio-domain.com"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/embed", "destination": "/" }
  ]
}
